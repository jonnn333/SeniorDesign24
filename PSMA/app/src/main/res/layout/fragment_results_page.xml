<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="capstones17_24.psma.resultsPage">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/Results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cough Analysis Results"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have a dry cough"
        android:textSize="20sp"
        android:layout_marginStart="90sp"
        android:layout_marginEnd="90sp"
        android:textAlignment="center"
        android:layout_marginTop="500sp"/>


    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/dry"
        android:visibility="visible"
        android:id="@+id/dry"
        android:layout_marginTop="120sp"
        android:layout_marginStart="125sp"
        />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/wheezing"
        android:visibility="visible"
        android:id="@+id/wheezing"
        android:layout_marginTop="360sp"
        android:layout_marginStart="125sp"
        />

    <ImageView
        android:id="@+id/productive"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="125sp"
        android:layout_marginTop="240sp"
        android:src="@drawable/productive"
        android:visibility="visible" />


</FrameLayout>
