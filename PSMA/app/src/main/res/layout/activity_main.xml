    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lines="3"
        android:text="Personal Specialized \nMedical Advisor"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14999998" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:maxLines="4"
        android:text="This application assists in determining certain \ntypes of coughs that may be associated with an illness."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.30"
        />

    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="Connect to Client"
        android:id="@+id/LoginButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="LoginClick"
        />

    <!--
    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text = "Create an Account"
        android:id="@+id/CreateAccountButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/LoginButton"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintVertical_bias="0.25"
        android:onClick="CreateAccountClick"/>
    -->

    <Button
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:text="About"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/LoginButton"
        app:layout_constraintVertical_bias="1.0"
        android:id="@+id/AboutClick"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:text="FAQs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/LoginButton"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintVertical_bias="1.0"
        android:id="@+id/FAQS_Click"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Terms and Conditions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/LoginButton"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintVertical_bias="1.0"
        android:id="@+id/TermsClick"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:text="Help"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/LoginButton"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="1.0"
        android:id="@+id/HelpClick"/>

    <EditText
        android:id="@+id/editTextIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Enter Client IP Address"
        android:inputType="number|numberDecimal"
        android:digits="0123456789."
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.39999998"
        android:textAlignment="center"
        android:layout_marginBottom="-1dp" />


</android.support.constraint.ConstraintLayout>
