<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="capstones17_24.psma.MainActivity"
    android:id="@+id/constraintLayout">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the: \nPersonal Specialized Medical Advisor!"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:fontFamily="cursive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14999998" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:maxLines="4"
        android:text="This application assists in determining certain \ntypes of coughs that may be associated with an illness."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.30"
        />

    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="Login"
        android:id="@+id/LoginButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text = "Create an Account"
        android:id="@+id/CreateButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/LoginButton"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:text="About"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/LoginButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:text="FAQs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/LoginButton"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Terms and Conditions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/LoginButton"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:text="Help"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/LoginButton"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>
